{
    "name": "@iac-factory/eslint-settings",
    "version": "1.2.9",
    "description": "ESLint Styling and Unit-Testing",
    "module": "index.js",
    "main": ".eslintrc.js",
    "scripts": {
        "setup": "npx tsc --init",
        "lint": "npm run build && npx eslint .",
        "build": "tsc --build $(dirname $(npm root))/tsconfig.json",
        "lintfix": "npx eslint --fix .",
        "prepublishOnly": "npm run test",
        "update": "npm run test -- --update-snapshot",
        "pretest": "npm run build",
        "test": "node --experimental-vm-modules $(command -v jest) --config jest.config.js --injectGlobals --detectOpenHandles"
    },
    "license": "BSD-2-Clause",
    "author": {
        "name": "Jacob B. Sanders",
        "url": "https://github.com/iac-factory",
        "organization": true
    },
    "files": [
        ".eslintrc.js",
        ".eslintrc.json",
        ".eslintrc.ts",
        "typescript.eslintrc.js",
        "typescript.eslintrc.ts",
        "yaml.eslintrc.yml"
    ],
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "peerDependencies": {
        "eslint": "^8.16.0"
    },
    "devDependencies": {
        "@jest/globals": "^28.1.0",
        "@jest/types": "^28.1.0",
        "@types/node": "^17.0.35",
        "@typescript-eslint/eslint-plugin": "^5.26.0",
        "@typescript-eslint/parser": "^5.26.0",
        "eslint": "^8.16.0",
        "jest": "^28.1.0",
        "typescript": "^4.7.2",
        "eslint-plugin-jest": "^26.4.2"
    }
}
