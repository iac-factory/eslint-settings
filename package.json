{
    "name": "@iac-factory/eslint-settings",
    "version": "1.0.2",
    "description": "ESLint Styling and Unit-Testing",
    "scripts": {
        "setup": "npx tsc --init",
        "lint": "npm run build && npx eslint .",
        "build": "tsc --build $(dirname $(npm root))/tsconfig.json",
        "lintfix": "npx eslint --fix .",
        "prepublishOnly": "npm run test",
        "pretest": "npm run build",
        "test": "node --experimental-vm-modules $(command -v jest) --config jest.config.js --injectGlobals --detectOpenHandles"
    },
    "license": "BSD-2-Clause",
    "author": {
        "name": "Jacob B. Sanders",
        "url": "https://github.com/iac-factory",
        "organization": true
    },
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "optionalDependencies": {
        "husky": "^7.0.4"
    },
    "devDependencies": {
        "@jest/globals": "^28.1.0",
        "@swc/core": "^1.2.194",
        "@swc/helpers": "^0.3.15",
        "@types/jest": "^27.5.1",
        "@types/node": "^17.0.35",
        "@typescript-eslint/eslint-plugin": "^5.26.0",
        "@typescript-eslint/parser": "^5.26.0",
        "eslint": "^8.16.0",
        "jest": "^28.1.0",
        "typescript": "^4.7.2",
        "eslint-plugin-jest": "^26.2.2"
    },
    "husky": {
        "hooks": {
            "commit-msg": "exec scripts/.husky/commit-msg"
        }
    },
    "peerDependencies": {
        "@commitlint/cli": "^16.2.4",
        "@commitlint/config-conventional": "^16.2.4",
        "@commitlint/prompt-cli": "^16.2.4",
        "conventional-changelog-conventionalcommits": "^4.6.3"
    },
    "peerDependenciesMeta": {
        "ts-node": {
            "optional": true
        },
        "@commitlint/cli": {
            "optional": true
        },
        "@commitlint/config-conventional": {
            "optional": true
        },
        "@commitlint/prompt-cli": {
            "optional": true
        },
        "conventional-changelog-conventionalcommits": {
            "optional": true
        }
    },
    "eslintConfig": {
        "extends": ".eslintrc.json"
    }
}
